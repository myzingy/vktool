/* plugin/components/line/line.wxss */
.line{
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}
.line:before{
  position: absolute;
  content: '';
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 100%;
  height: 2rpx;
  background-color: #ccc;
  border-radius: 10rpx;
}
.line .text{
  position: absolute;
  font-size: 30rpx;
  background-color: #fff;
  padding: 0 20rpx;
}